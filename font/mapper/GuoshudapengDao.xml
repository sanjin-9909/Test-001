        <result property="dapengtupian" column="dapengtupian"/>
        <result property="dapengleixing" column="dapengleixing"/>
        <result property="guige" column="guige"/>
        <result property="tedian" column="tedian"/>
        <result property="mianji" column="mianji"/>
        <result property="wendu" column="wendu"/>
        <result property="shidu" column="shidu"/>
        <result property="guangzhao" column="guangzhao"/>
        <result property="chuangjianshijian" column="chuangjianshijian"/>
        <result property="shebeisheshi" column="shebeisheshi"/>
        <result property="xinyongdaima" column="xinyongdaima"/>
        <result property="hezuoshemingcheng" column="hezuoshemingcheng"/>
