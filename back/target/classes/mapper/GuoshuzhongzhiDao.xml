    <select id="selectListView"
		resultType="com.entity.view.GuoshuzhongzhiView" >

		SELECT  guoshuzhongzhi.* FROM guoshuzhongzhi  guoshuzhongzhi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
